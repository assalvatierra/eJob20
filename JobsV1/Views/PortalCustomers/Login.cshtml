@using JobsV1.Models
@model PortalCustomer
@{
    ViewBag.Title = "Authentication";
}

<section id="loginForm">

    @using (Html.BeginForm("Login", "PortalCustomers", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3 style="text-align:center">Customer Login</h3>
        <p class="text-danger"> @ViewBag.errorMsg</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="col-md-2 control-label">Contact_No.</span>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ContactNum, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ContactNum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>
    }

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
