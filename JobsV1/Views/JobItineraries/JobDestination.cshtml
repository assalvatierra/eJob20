@model IEnumerable<JobsV1.Models.PkgDestination>

@{
    ViewBag.Title = "Job Itineraries";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

@*<h3>Job Order: @ViewBag.JobOrder.Customer.Name</h3>*@

<div>
    <p>
        @*Date: @ViewBag.JobOrder.JobDate.ToString("dd/MMM/yyyy")*@
        @*<br />Description: @ViewBag.JobOrder.Description*@
        <br />@Html.ActionLink("Edit", "Edit", "JobMains", new { id = ViewBag.JobOrderId }, null)
        | @Html.ActionLink("Details", "Details", "JobMains", new { id = ViewBag.JobOrderId }, null)

    </p>
    <p>
        @Html.ActionLink("Services", "JobServices", "JobOrder", new { JobMainId = ViewBag.JobOrderId }, null) |
        Destinations | 
        @Html.ActionLink("Notes", "JobNotes", "JobMains", new { id = ViewBag.JobOrderId }, null) |
        @Html.ActionLink("Payments", "Payments", "JobPayments", new { id = ViewBag.JobOrderId }, null) |
        @Html.ActionLink("Expenses", "CashExpenses", "JobExpenses", new { jobId = ViewBag.JobOrderId }, null)
    </p>
</div>


<h2>Destinations</h2>
<p>
    @Html.ActionLink("Add Destinations", "JobDestination_Add", "JobItineraries", new { jobId = ViewBag.JobOrderId }, null)  
</p>
<table class="table">
    <tr>
        <th>
            Destination
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


<p>
    @Html.ActionLink("Add Destination", "Create", new { JobMainId = ViewBag.JobOrderId })
    <br />@Html.ActionLink("Back to Job List", "Index", "JobMains")
</p>

