
@{
    ViewBag.Title = "Reporting";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";

}

<div class="view-content">
    <div class="col-lg-2" style="margin-bottom:10px;" >
        <h3>Reports </h3>
        <div class="row col-lg-12">
            <div class="btn-group-vertical" style="width:150px;">
                @Html.ActionLink("Job Listing", "Index", new { reportkey = "job", company = "all", unitDriver = "all" }, new { @class="btn btn-default" })
                @Html.ActionLink("Payments", "Index", new { reportkey = "payments" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Packages", "Index", new { reportkey = "packages" , status = "all", unit = "all", package = "all", group = "all" }, new { @class = "btn btn-default" })
                @Html.ActionLink("Job Income", "Index", new { reportkey = "income"}, new { @class = "btn btn-default" })
                @Html.ActionLink("Unit Income", "Index", new { reportkey = "income-unit", unit = 0}, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="col-lg-10" >
        <!-- filter -->
        @{
                if (ViewBag.reportkey == "job")
                {
                    @Html.Partial("JobListingReport", new ViewDataDictionary { { "sDate", @ViewBag.sDate } });
                }
                else if(ViewBag.reportkey == "payments")
                {
                    @Html.Partial("PaymentsReport");
                }
                else if(ViewBag.reportkey == "packages")
                {
                    @Html.Partial("PackageRatesReport");
                }
                else if(ViewBag.reportkey == "income")
                {
                    @Html.Partial("JobIncomeReport" );
                }
                else if (ViewBag.reportkey == "income-unit")
                {
                    @Html.Partial("UnitIncomeReport");
                }
                else
                {
                    @Html.Partial("JobListingReport", new ViewDataDictionary { { "sDate", @ViewBag.sDate } });
                }
        }
    </div>
</div>
