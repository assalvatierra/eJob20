
<!-- Add Inv Rate Modal -->
<div class="modal fade" id="EditSupItemRate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"> Edit Supplier Item Rate</h4>
            </div>

            <div class="modal-body">
                <div class="row">

                    <div class="form-group cform" hidden>
                        <b class="col-md-2"> Item Id </b>
                        <div class="col-md-3">
                            <input id="EditSupItemRate-ItemLeadId" class="form-control" type="text" maxlength="80">
                        </div><p></p>
                    </div>


                    <div class="form-group cform">
                        <b class="col-md-2"> Item </b>
                        <div class="col-md-9" style="padding-top:5px;">
                            <p id="EditSupItemRate-Item-Text"> </p>
                        </div>
                        <div class="col-md-9" hidden>
                            <select id="EditSupItemRate-Item" class="form-control">
                                @foreach (var item in ViewBag.Items as IEnumerable<JobsV1.Models.InvItem>)
                                {
                                    <option value="@item.Id"> @item.Description </option>
                                }
                            </select>
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Supplier </b>
                        <div class="col-md-9">
                            <select id="EditSupItemRate-Supplier" class="form-control">
                                @foreach (var supplier in ViewBag.Suppliers as IEnumerable<JobsV1.Models.Supplier>)
                                {
                                    <option value="@supplier.Id"> @supplier.Name </option>
                                }
                            </select>
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Particulars* </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-Particulars" class="form-control has-error" type="text" maxlength="80">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Material </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-Materials" class="form-control" type="text" maxlength="40">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Rate* </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-Rate" class="form-control" type="number" maxlength="80" value="0">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Unit </b>
                        <div class="col-md-9">
                            <select id="EditSupItemRate-UnitType" class="form-control">
                                @foreach (var unit in ViewBag.UnitList as IEnumerable<JobsV1.Models.SupplierUnit>)
                                {
                                    <option value="@unit.Id"> @unit.Unit</option>
                                }
                            </select>
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2">TradeTerm </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-TradeTerm" class="form-control" type="text" maxlength="80">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Tolerance </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-Tolerance" class="form-control" type="text" maxlength="80">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Remarks </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-Remarks" class="form-control" type="text" maxlength="80">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> ValidFrom*</b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-ValidFrom" class="form-control" type="text" maxlength="20">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Valid&nbsp;To* </b>
                        <div class="col-md-10">
                            <input id="EditSupItemRate-ValidTo" class="form-control" type="text" maxlength="20">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Offered&nbsp;By </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-OfferedBy" class="form-control" type="text" maxlength="40">
                        </div><p></p>
                    </div>

                    <div class="form-group cform">
                        <b class="col-md-2"> Procured&nbsp;By </b>
                        <div class="col-md-9">
                            <input id="EditSupItemRate-ProcBy" class="form-control" type="text" maxlength="40">
                        </div><p></p>
                    </div>

                    <div class="col-lg-offset-2 col-md-10" style="color:red;">
                        <!-- Validations -->
                        <p id="EditSupItemRate-Particulars-errorMsg" hidden> * Invalid Particulars </p>
                        <p id="EditSupItemRate-Rate-errorMsg" hidden> * Invalid Rate </p>
                        <p id="EditSupItemRate-Date-errorMsg" hidden> * Invalid Dates </p>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="submit_EditSupItemRate" onclick="Submit_EditSupItemRate()">
                    Save Changes
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
