@using JobsV1.CustomHelper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    @Html.ActionLink("NetApps", "Index", "Home")
                    <span class="site-subtitle">@@2015</span>
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">

            <table>
                <tr>
                    <td style="vertical-align:top;">
                        <div class="CustomBox" style="float:left;height:90px;width:90%;">
                            <a href="@Url.Action("Index", "Home", new { area = "" })">
                                <img src="~/Images/Erp/ErpHomeIcon.png" class="ModulePageIcon" alt="Home" />
                            </a>
                        </div>
                    </td>
                    <td style="vertical-align:top;white-space:nowrap;width:70%;">
                        <div class="CustomBox" style="height:90px;width:100%;">
                            @Html.Module(Url.Content("~/"), "", "", (int)Session["ROOTMENUID"])
                        </div>
                    </td>

                </tr>
                <tr>
                    <td style="vertical-align:top;">
                        <div class="CustomBox" style="float:left;width:90%;">
                            @Html.Menu(Url.Content("~/"), "", "", (int)Session["ROOTMENUID"])
                        </div>
                        <div class="PanelContainer">
                            @RenderSection("LeftInfo", required: false)
                        </div>
                    </td>
                    <td style="vertical-align:top;max-width:620px;">
                        <div class="PanelContainer">
                            @RenderBody()
                        </div>
                    </td>
                </tr>

            </table>
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>


<script type="text/javascript">
    var RootUrl = '@Url.Content("~/")';
</script>
