@model IEnumerable<JobsV1.Models.DriverInsJobService>

@{
    ViewBag.Title = "DriverInstructions";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Driver Instructions</h2>

<p>
    @Html.ActionLink("Back to Job Service", "JobServices", new { JobMainId = ViewBag.mainId }) |
    @Html.ActionLink("Instructions List", "Index", "DriverInstructions")
    
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DriverInstruction.Description)
        </th>
        <th></th>
    </tr>
            @{ 
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriverInstruction.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteDriverInst", new { id=item.Id, jsId = ViewBag.JobServiceId }, null)
                    </td>
                </tr>
               }
            }
         
</table>
<a href="" id="editPosted" data-toggle="modal" data-target="#instructions" style="margin-bottom:10px;">Add Instructions</a>

<!-- Instructions -->
<div class="modal fade" id="instructions" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Instructions List</h4>
            </div>

            <div class="modal-body" id="modal2-content">

                <div class="list-group" id="categorylist">

                    @foreach (var list in ViewBag.InstructionsList as IEnumerable<JobsV1.Models.DriverInstructions>)
                    {
                        var jsid = ViewBag.JobServiceId;
                        <a href="~/JobOrder/AddDriverInst/@list.Id?jsId=@jsid" class="list-group-item"> @list.Description </a>
                       
                    }
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/Scripts/jquery-3.3.1.js"> </script>
<script>

</script>


