@model IEnumerable<JobsV1.Models.Supplier>

@{
    ViewBag.Title = "Suppliers List";
    Session["ROOTMENUID"] = 4;
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="DataTables/datatables.min.css" />
<script type="text/javascript" src="DataTables/datatables.min.js"></script>

<div class="view-header">

    <h2>Suppliers</h2>
    
    <div class="header-btn-list">
        <div class="btn-group">
            @Html.ActionLink("Create New", "CreateSupplier",null,new { @class = "btn btn-primary" })
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li>
                    @Html.ActionLink("Deactivate List", "DeactivateSupplierList")
                </li>
            </ul>
        </div>
    </div>

</div>

<div class="view-content">

    <p>
        Status:
        <span>
            <span id="ACT" class="status-link"> Active   </span> |
            <span id="INC" class="status-link"> Inactive </span> |
            <span id="BAD" class="status-link"> Bad      </span> |
            <span id="ACC" class="status-link"> Accredited </span> |
            <span id="AOP" class="status-link"> Acc. on Progress </span> |
            <span id="ALL" class="status-link"> All </span>
        </span>
    </p>


    <div class="form-group">
        <div class="search-group">
            <input class="form-control search-cat" id="srch-field" type="search" />
        </div>
        <div>
            <select class="form-control search-field" id="srch-category">
                <option value="SUPPLIER"> Supplier </option>
                <option value="COUNTRY"> Country     </option>
                <option value="CATEGORY"> Category </option>
                <option value="PRODUCT"> Product  </option>
            </select>
        </div>
        <div>
            <button class="btn btn-default search-group" id="srch-btn" onclick="searchSupplier()">Search</button>
        </div>
    </div>

    @*<p>Table View:
            <span>
                <span id="simple-Table" class="status-link" onclick="ajax_loadContent()" >Simple</span>
                <span id="expanded-Table" class="status-link" onclick="ajax_loadContent()"> Expanded</span>
            </span>
        </p>

        <p >
            <input type="search" id="srch-field"/>
            <button class="btn btn-default" onclick="ajax_loadContent()">Search</button>
        </p>
    *@

    <table class="table js-sort-table " id="sup-Table">
        <thead>
            <tr id="supplier-header-main">
                <th class="cursor-hand col-md-2">Supplier</th>
                <th class="cursor-hand col-md-1">Code    </th>
                <th class="cursor-hand col-md-1">Country </th>
                <th class="cursor-hand col-md-1">Category</th>
                <th class="cursor-hand col-md-1">Status  </th>
                <th class="js-sort-number col-md-2" style="min-width:150px;">Product</th>
                <th class="js-sort-number col-md-1" style="min-width:120px;">Contact&nbsp;Person </th>
                <th class="col-md-2">Mobile/Email</th>
                <th class="col-md-1" style="min-width:100px;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2"> </td>
                <td colspan="3">
                    <br />
                    <img src="~/Images/GIF/loading.gif" height="25" />
                    Loading suppliers, please wait...
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <table class="js-sort-table table" id="prod-Table" hidden>
        <tr id="supplier-header-product">
            <th class="cursor-hand"> Product </th>
            <th class="cursor-hand"> Supplier </th>
            <th class="js-sort-number"> Rate </th>
            <th> Date Encoded </th>
            <th id="sort-date-validity"> Validity Start </th>
            <th class="cursor-hand"> Validity End </th>
            <th> Remarks </th>
            <th> </th>
        </tr>
        <tr>
            <td colspan="2"> </td>
            <td colspan="3">
                <br />
                <img src="~/Images/GIF/loading.gif" height="25" />
                Loading suppliers, please wait...
            </td>
            <td></td>
        </tr>
    </table>
    <p id="expireNotice" hidden>Note: Greyed Products are past valid date.</p>

</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Job/SupplierList.js"></script>
<script src="~/Scripts/sort-table.js"></script>