@model JobsV1.Models.SalesLead

@{
    Layout = null;

    JobsV1.Models.SalesLead item = Model;

    string USER = ViewData["AssignedTo"] as string;
    bool ISADMIN = (bool)ViewData["IsAdmin"];
}


<p>
    <nobr>
        @if (item.ItemWeight != null)
        {

            if (USER == item.AssignedTo || ISADMIN)
            {
                <a class="cursor-hand" onclick="ShowSalesLeadWeight(@item.Id)">
                    <img src="~/Images/Icons/icons-weight.png" width="12" />
                    &nbsp; @item.ItemWeight&nbsp;TONS
                </a>
            }
            else
            {
                <span>
                    <img src="~/Images/Icons/icons-weight.png" width="12" />
                    &nbsp; @item.ItemWeight&nbsp;TONS
                </span>
            }
        }
        else
        {

            if (USER == item.AssignedTo || ISADMIN)
            {
                <a class="cursor-hand" onclick="ShowSalesLeadWeight(@item.Id)">
                    <img src="~/Images/Icons/icons-weight.png" width="12" />&nbsp;
                    Update Weight
                </a>
            }

        }
    </nobr>
</p>



<p>
    <nobr>
        @if (item.Price != 0)
        {

        }
        else
        {

            if (USER == item.AssignedTo || ISADMIN)
            {
                <a class="cursor-hand" onclick="ShowSalesLeadPrice(@item.Id)">
                    <img src="~/Images/Icons/icons-peso-symbol.png" width="12" />
                    &nbsp;
                    Update Price
                </a>
            }

        }
    </nobr>
</p>