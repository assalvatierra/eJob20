<!-- Search Customer Modal w/ search -->
<div class="modal fade" id="AddCheckerActivityModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Checker Activity </h4>
            </div>

            <div class="modal-body">

                <div class="row">
                    <div class="form-horizontal">
                        <div class="form-group" hidden>
                            <lable class="control-label col-md-2"> SalesLead Id </lable>
                            <div class="col-md-10">
                                <input class="form-control" id="AddCheckerAct-SalesLeadId" type="text" maxlength="20" />
                            </div>
                        </div>

                        <div class="form-group">
                            <lable class="control-label col-md-2"> Activity Type </lable>
                            <div class="col-md-10">
                                <select id="AddCheckerAct-Type" class="form-control">
                                    @foreach (var item in ViewBag.CheckerActivtyTypes as IEnumerable<JobsV1.Models.CheckerActivityType>)
                                    {
                                        <option value="@item.Id"> @item.Type </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <lable class="control-label col-md-2"> Remarks </lable>
                            <div class="col-md-10">
                                <input class="form-control" id="AddCheckerAct-Remarks" type="text" maxlength="80" />
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <lable class="control-label col-md-2"> Date </lable>
                            <div class="col-md-10">
                                <input class="form-control" id="AddCheckerAct-Date" type="text" />
                            </div>
                        </div>

                        <div class="form-group" hidden>
                            <lable class="control-label col-md-2"> By </lable>
                            <div class="col-md-10">
                                <input class="form-control" id="AddCheckerAct-CheckedBy" type="text" maxlength="80" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="SubmitCheckerActivity()"> Add Activity </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<!-- Checker Activity List-->
<div class="modal fade" id="CheckerActivityList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Activity List</h4>
            </div>

            <div class="modal-body" >
                <div class="list-group" id="Checker-Activities">
                    @foreach (var item in ViewBag.CheckerActivtyTypes as IEnumerable<JobsV1.Models.CheckerActivityType>)
                    {
                        <button type="button" class="list-group-item" onclick="SelectThisCheckerActivity(@item.Id,'@item.Type','@item.Remarks')" > @item.Type </button>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
