@model IEnumerable<JobsV1.Models.JobServices>

@{
    ViewBag.Title = "Jobs After Sale";
    Session["ROOTMENUID"] = 18;
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
    var Services = ViewBag.Services as IEnumerable<JobsV1.Models.Services>;
}
<div class="panel">
    <div class="panel-body">
        <h2>Jobs After Sale</h2>

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h4 class="col-md-1 col-sm-12 col-xs-12 control-label form-label form-filter-label"> Filter: </h4>
                    <div class="col-md-2 col-sm-6 col-xs-12" style="padding-left:0px;">
                        <select name="serviceId" id="serviceId" class="form-control col-md-12 col-xs-12 form-filter-input" value="@ViewBag.serviceId">
                            <option value="0"> All </option>
                            @foreach (var service in Services.OrderBy(m => m.Name))
                            {
                                <option value="@service.Id">  @service.Name.Trim() </option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="padding:0px;">
                        <button class="btn btn-default col-lg-2 col-md-2 col-sm-2 col-xs-6 form-filter-input" type="submit"> Filter </button>
                    </div>
                </div>
            </div>
        }

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th colspan="4">
                    Vehicle Info
                </th>
                <td colspan="5">
                    Previous Transaction
                </td>
                <th colspan="3">
                    Post Sale Info
                </th>
            </tr>
            <tr>
                <th>
                    Plate Number
                </th>
                <th>
                    Year Model
                </th>
                <th>
                    Make
                </th>
                <th>
                    Variant
                </th>
                <th>
                    Mileage
                </th>
                <th>
                    Date
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Service
                </th>
                <th>
                    Contact
                </th>
                <th></th>
                <th>
                    Done By
                </th>
                <th>
                    Remarks
                </th>
            </tr>

            @foreach (var item in Model)
            {


                var jobvehicle = new JobsV1.Models.JobVehicle();
                if (item.JobMain.JobVehicles.FirstOrDefault() != null)
                {
                    jobvehicle = item.JobMain.JobVehicles.LastOrDefault();
                }

                <tr>
                    <td>
                        @if (jobvehicle.Vehicle != null)
                        {
                            @jobvehicle.Vehicle.PlateNo
                        }
                        else
                        {
                            <p class="text-muted"> No Vehicle Assigned </p>
                        }
                    </td>
                    <td>
                        @if (jobvehicle.Vehicle != null)
                        {
                            @jobvehicle.Vehicle.YearModel
                        }

                    </td>
                    <td>
                        @if (jobvehicle.Vehicle != null)
                        {
                            <span>
                                @jobvehicle.Vehicle.VehicleModel.VehicleBrand.Brand&nbsp;
                                @jobvehicle.Vehicle.VehicleModel.Make
                            </span>
                        }

                    </td>
                    <td>
                        @if (jobvehicle.Vehicle != null)
                        {
                            @jobvehicle.Vehicle.VehicleModel.Variant
                        }
                    </td>
                    <td>
                        @jobvehicle.Mileage.ToString("#,##0")
                    </td>
                    <td>
                        @DateTime.Parse(item.DtStart.ToString()).ToString("MMM dd, yyyy")
                    </td>
                    <td>
                        @item.JobMain.Customer.Name
                    </td>
                    <td>
                        @Html.ActionLink(item.Service.Name + " - " + item.Particulars, "JobServices", "JobOrder", new { JobMainId = item.JobMainId }, null)
                    </td>
                    <td>
                        @item.JobMain.CustContactNumber / @item.JobMain.CustContactEmail
                    </td>

                    @if (item.JobPostSales.FirstOrDefault() == null)
                    {
                        <td colspan="4">
                            @Html.ActionLink("Create", "Create", new { id = item.Id })
                        </td>
                    }
                    else
                    {
                        var postSaleDetails = item.JobPostSales.FirstOrDefault();
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = postSaleDetails.Id })
                        </td>
                        <td>
                            @postSaleDetails.DoneBy.Substring(0, postSaleDetails.DoneBy.IndexOf('@'))
                        </td>
                        <td>
                            @postSaleDetails.Remarks
                        </td>
                    }

                </tr>
            }

        </table>
    </div>
</div>