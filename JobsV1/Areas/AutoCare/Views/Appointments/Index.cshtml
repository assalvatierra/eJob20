@model IEnumerable<JobsV1.Areas.AutoCare.Data.Appointment>

@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Appointments</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Public Appointment Form", "Appointment", "Public",new { area = "" }, null) 
</p>
<table class="table">
    <tr>
        <th style="min-width:60px;">
            Date
        </th>
        <th style="min-width:120px;">
            Slot
        </th>
        <th style="min-width:150px;">
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th style="min-width:120px;">
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th style="min-width:120px;">
            Vehicle
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            Account
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentStatu.Status)
        </th>
        <th> Status Update </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

<tr>
    <td>
        @DateTime.Parse(item.AppointmentDate).ToString("MMM dd yyyy")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentSlot.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Unit) <br />
        @Html.DisplayFor(modelItem => item.Plate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentRequest.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Remarks)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentAcctType.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentStatu.Status)
    </td>
    <td>
        @Html.ActionLink("Accepted", "UpdateStatus", new { id = item.Id, statusId = 2 })&nbsp;|
        @Html.ActionLink("Cancelled", "UpdateStatus", new { id = item.Id, statusId = 3 })&nbsp;|
        @Html.ActionLink("Close", "UpdateStatus", new { id = item.Id, statusId = 4 })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })&nbsp;|
        @Html.ActionLink("Details", "Details", new { id = item.Id })&nbsp;|
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
