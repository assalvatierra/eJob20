                                    </div>
                                    <div class="form-group col-md-12 col-xs-12">
                                        <label class="col-md-3 col-xs-3 control-label form-label"> Amount </label>
                                        <div class="col-md-9 col-xs-9">
                                            <input type="text" class="form-control form-button-margin-left" value="@Model.Amount" />
                                        </div>
                                    </div>

