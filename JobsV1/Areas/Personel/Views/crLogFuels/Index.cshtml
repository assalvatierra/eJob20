@model IEnumerable<JobsV1.Areas.Personel.Models.crLogFuel>

@{
    ViewBag.Title = "Fuel Logs";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<style>
    .PanelContainer-main {
        background-color: #eff3f6;
        border: none;
    }
</style>

<h2>Fuel Logs</h2>
<p>

    @Html.ActionLink("Trip Logs", "Index", "CarRentalLog", null, null) |
    @Html.ActionLink("Odo", "Index", "CrLogOdoes", null, null) |
    @Html.ActionLink("Fuel", "Index", "CrLogFuels", null, null)
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dtRequest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crLogUnit.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crLogDriver.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtFillup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.odoFillup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dtRequest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.crLogUnit.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.crLogDriver.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dtFillup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.odoFillup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orAmount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
