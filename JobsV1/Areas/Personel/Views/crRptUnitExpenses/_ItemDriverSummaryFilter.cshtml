@{ 
    var driverList = ViewBag.crLogDriverList as IEnumerable<JobsV1.Areas.Personel.Models.crLogDriver>;
    var unitList = ViewBag.crLogUnitList as IEnumerable<JobsV1.Areas.Personel.Models.crLogUnit>;
}

<div class="modal fade" role="dialog" id="ItemDriverSummaryFilter" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" style="max-width:470px;">
            <form method="post" id="Form_ItemDriverSummaryFilter">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> Driver Summary Filter </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label class="control-label form-label col-sm-2"> Filter&nbsp;Date  </label>
                            <div class="col-sm-10" style="margin-top:5px;">
                                <a class="cursor-hand" onclick="ItemDriverSummaryFilter_AddDays(-7)"> Last 7 Days </a> |
                                <a class="cursor-hand" onclick="ItemDriverSummaryFilter_AddDays(-15)"> Last 15 Days </a> |
                                <a class="cursor-hand" onclick="ItemDriverSummaryFilter_AddDays(-30)"> Last 30 Days </a>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="control-label form-label col-sm-2"> Start&nbsp;Date  </label>
                            <div class="col-sm-10">
                                <input class="form-control form-group-margin-bot" name="DtStart" type="text" id="ItemDriverSummaryFilter-StartDate" />
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="control-label form-label col-sm-2"> End&nbsp;Date  </label>
                            <div class="col-sm-10">
                                <input class="form-control form-group-margin-bot" name="DtEnd" type="text" id="ItemDriverSummaryFilter-EndDate" />
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label form-label col-sm-2"> Report  </label>
                            <div class="col-sm-10">
                                <input class="form-control form-group-margin-bot" name="rptName" type="text" id="ItemDriverSummaryFilter-rptName" readonly />
                            </div>
                        </div>

                        <div class="form-group col-md-12" hidden>
                            <label class="control-label form-label col-sm-2"> Report  </label>
                            <div class="col-sm-10">
                                <input class="form-control form-group-margin-bot" name="rptId" type="text" id="ItemDriverSummaryFilter-rptId" readonly />
                            </div>
                        </div>
                    </div>
                    </div>
                <div class="modal-footer">
                    <div class="col-md-12 col-sm-12 col-xs-9">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="Submit_ItemDriverSummaryFilter()">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>