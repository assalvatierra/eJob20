@model IEnumerable<JobsV1.Areas.Personel.Models.crLogCashRelease>

@{
    ViewBag.Title = "AddSalary";
    int salaryId = ViewBag.SalaryId;
}

<h2>Select Salary</h2>

<p>
    @Html.ActionLink("Back to Salary", "Details", new { id = salaryId }, null)
</p>

<div class="list-group col-md-6">

    @foreach (var item in Model)
    {
        <a href="/Personel/crLogCashSalaries/AddSalarySelect/@salaryId?CashReleaseId=@item.Id" class="list-group-item list-group-item-action">

            @item.DtRelease.ToString("MMM dd yyyy") -
            @Html.DisplayFor(modelItem => item.crLogDriver.Name)

            <span class="text-muted">
                &nbsp;
                @Html.DisplayFor(modelItem => item.Remarks)
            </span>
            &nbsp;
            <span class="pull-right" style="color:green">
                Amount:
                @item.Amount.ToString("#,##0.00")
            </span>
        </a>
    }
</div>