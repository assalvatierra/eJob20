@model IEnumerable<JobsV1.Areas.Personel.Models.CrRptUnit>

@{
    ViewBag.Title = "Car Rental Report";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Unit Report</h2>

<p>
    @Html.ActionLink("Unit Expense Report", "Index", "crRptUnitExpenses", null, null)
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.crLogUnit.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crRptUnitExpense.RptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RptSeqNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.crLogUnit.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.crRptUnitExpense.RptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RptSeqNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
