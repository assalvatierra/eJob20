@model IEnumerable<JobsV1.Areas.Personel.Models.crLogCompany>

@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Companies</h2>
<p>
    @Html.ActionLink("Trip Logs", "Index", "CarRentalLog") |
    @Html.ActionLink("Drivers", "Index", "crLogDrivers") |
    @Html.ActionLink("Units", "Index", "crLogUnits") |
    Companies |
    @Html.ActionLink("Cash Transactions", "Index", "CarRentalCashRelease") |
    @Html.ActionLink("Expenses", "Index", "CrLogFuels", null, null)
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Billing Info
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShuttle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInternal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name) <br />
            </td>
            <td>
                <span style="font-size:12px;"> @item.BillingName </span><br />
                <span style="font-size:10px;"> @item.BillingAddress </span><br />
                <span style="font-size:10px;"> @item.BillingTIN </span><br />
                <span style="font-size:10px;"> @item.BillingStyle </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsShuttle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInternal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                @Html.ActionLink("Rates", "UpdateCompanyRates", new { id = item.Id })|
                <a href="/mod/110/company/trip/@item.Id"> Passengers </a>
            </td>
        </tr>
    }

</table>
