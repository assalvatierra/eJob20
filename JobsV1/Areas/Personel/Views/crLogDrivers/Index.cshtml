@model IEnumerable<JobsV1.Areas.Personel.Models.crLogDriver>

@{
    ViewBag.Title = "Drivers";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Drivers</h2>
<p>
    @Html.ActionLink("Trip Logs", "Index", "CarRentalLog") |
    Drivers |
    @Html.ActionLink("Units", "Index", "crLogUnits") |
    @Html.ActionLink("Companies", "Index", "crLogCompanies") |
    @Html.ActionLink("Cash Transactions", "Index", "CarRentalCashRelease") |
    @Html.ActionLink("Expenses", "Index", "CrLogFuels", null, null)
</p>
<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Cash Trx", "Index", "CarRentalCashRelease")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th> Contact </th>
        <th> OrderNo</th>
        <th> Status</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact1)
            @if (!String.IsNullOrWhiteSpace(item.contact2))
            {
                if (!String.IsNullOrWhiteSpace(item.contact1))
                {
                    <span> / </span>
                }
                
                @Html.DisplayFor(modelItem => item.contact2)
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Summary", "DriverSummary", "CarRentalLog", new { id = item.Id }, null) |
            @Html.ActionLink("Salary Details", "DriverTrxHistory", "CarRentalLog", new { id = item.Id }, null) |
            @Html.ActionLink("Trip List", "DriversTripList", "crLogPassengers", new { id = item.Id }, null) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
