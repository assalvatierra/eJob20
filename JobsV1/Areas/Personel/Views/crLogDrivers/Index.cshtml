@model IEnumerable<JobsV1.Areas.Personel.Models.crLogDriver>

@{
    ViewBag.Title = "Drivers";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Drivers</h2>

<p>
    @Html.ActionLink("Back to Trip Logs", "Index", "CarRentalLog") |
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th> Contact </th>
        <th> OrderNo</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact1)
            @if (!String.IsNullOrWhiteSpace(item.contact1) || !String.IsNullOrWhiteSpace(item.contact2))
            {
                <span> / @Html.DisplayFor(modelItem => item.contact2) </span>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
