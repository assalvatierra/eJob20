@model IEnumerable<ArModels.Models.ArPayment>

@{
    ViewBag.Title = "Payments";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Payments</h2>

<p>
    @Html.ActionLink("Back to Home", "Index", "Home",  new { area = "" }, null)
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DtPayment)
        </th>
        <th>
            Account
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArPaymentType.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reference)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.DtPayment.ToString("MMM dd yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArAccount.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArPaymentType.Type)
            </td>
            <td>
                @item.Amount.ToString("#,##0.00")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
