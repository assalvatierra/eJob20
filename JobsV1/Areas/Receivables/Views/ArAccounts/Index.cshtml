@model IEnumerable<ArModels.Models.ArAccount>

@{
    ViewBag.Title = "Customer Accounts";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Customer Accounts</h2>
<p>
    @Html.ActionLink("Back to Home", "Index", "Home",  new { area = "" }, null)
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Account
        </th>
        <th style="width:140px;">
            @Html.DisplayNameFor(model => model.Landline)
        </th>
        <th style="width:140px;">
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            Contact Person
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="width:140px;">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArAccStatu.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Landline)<br />
                @Html.DisplayFor(modelItem => item.Landline2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)<br />
                @Html.DisplayFor(modelItem => item.Mobile2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArAccStatu.Status)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </li>
                        <li> @Html.ActionLink("Details", "Details", new { id = item.Id }) </li>
                        <li> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
