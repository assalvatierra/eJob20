@model IEnumerable<JobsV1.Areas.Products.Models.SmProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Products </h2>

<p>
    @Html.ActionLink("Add New Product", "Create")
</p>
<p>
    <a onclick="setActiveTrue()" id="status-act" style="cursor:pointer;color:black;">Active</a> |
    <a onclick="setInactiveTrue()" id="status-inc" style="cursor:pointer;color:dodgerblue;">Inactive</a>
</p>
<p>
    <span> Search </span>
    <input type="search" id="srch-field" />
    <button class="btn btn-default" id="srch-btn" onclick="ajax_loadContent()">Search</button>
</p>


<table class="table " id="prodTable">
    <tr>
        <th>Code</th>
        <th>Name </th>
        <th>Price</th>
        <th>Validity Start</th>
        <th>Validity End </th>
        <th>Remarks</th>
        <th>Status</th>
        <th></th>
    </tr>
    <tr>
        <td colspan="2"> </td>
        <td colspan="3">
            <br />
            <img src="~/Images/GIF/loading.gif" height="25" />
            Loading products, please wait...
        </td>
    </tr>
</table>


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/DateRangePicker/moment.min.js"></script>
<script src="~/Areas/Products/Script/ProdList.js"></script>