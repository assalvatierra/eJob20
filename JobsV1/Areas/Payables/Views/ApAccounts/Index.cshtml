@model IEnumerable<ApModels.Models.ApAccount>

@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<h2>Accounts</h2>

<p>
    @*@Html.ActionLink("Back to List", "Index" , "Home", new { area = "" },null) |*@
    @Html.ActionLink("Create New", "Create", null, new { @class= "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Landline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApAccStatu.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Landline)- <br />
            @Html.DisplayFor(modelItem => item.Landline2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile) - <br />
            @Html.DisplayFor(modelItem => item.Mobile2) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            <span class="label label-default">
                @Html.DisplayFor(modelItem => item.ApAccStatu.Status)
            </span>
        </td>
        <td>
       
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-actions" data-toggle="dropdown">
                    Actions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdown-actions">
                    
                    <li> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </li>
                    <li> @Html.ActionLink("Details", "Details", new { id = item.Id }) </li>
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </ul>
            </div>
        </td>
    </tr>
}

</table>
