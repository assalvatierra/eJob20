@model IEnumerable<JobsV1.Models.DataGroup>

@{
    ViewBag.Title = "Teams / Users Groups";
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
    Session["ROOTMENUID"] = 8;
}

<h2>Teams / Users Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            Users / Members
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @foreach (var assigned in item.DataGroupAssigns)
            {
                <p>@assigned.User  
            
                 @Html.ActionLink("[x]", "DeleteAssign", new { Id = assigned.Id}, null)  
                </p>
            }
            <p>
            @Html.ActionLink("+ Add User", "CreateAssign", new { groupId = item.Id}, null) 
            </p>
       </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
