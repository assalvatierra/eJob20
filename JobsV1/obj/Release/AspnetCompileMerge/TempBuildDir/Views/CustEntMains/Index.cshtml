@model IEnumerable<JobsV1.Models.CustEntMain>

@{
    ViewBag.Title = "Companies";
    Session["ROOTMENUID"] = 5;
    Layout = "~/Views/Shared/_ModuleLayout.cshtml";
}

<div class="view-header">

    <h2>Companies </h2>

    <div class="header-btn-list">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
    
</div>
<div class="view-content">
    <div class="filter-panel">
        <div class="sort-panel">
            <div class="btn-group">
                <button class="btn btn-default disabled" style="color:black;">
                    Status:
                </button>
                <button id="PRI" class="btn btn-default status-link status-active"> Priority   </button> 
                <button id="ACC" class="btn btn-default status-link"> Accredited   </button> 
                <button id="AOP" class="btn btn-default status-link"> Accreditation on Process   </button> 
                <button id="BOT" class="btn btn-default status-link "> Billing/Terms   </button> 
                <button id="ACT" class="btn btn-default status-link"> Active </button> 
                <button id="ALL" class="btn btn-default status-link "> All      </button>
            </div>
        </div>
        <div class="search-panel">

            <div class="btn-group">
                <div class="btn-group">
                    <input class="form-control search-cat" id="srch-field" type="search" />
                </div>
                <div class="btn-group">
                    <select class="form-control search-field" id="srch-category" style="margin-right:0px;width:160px;">
                        <option value="Company">Company Name</option>
                        <option value="City">City</option>
                        <option value="Category">Category</option>
                        <option value="ContactName">Contact Person</option>
                        <option value="AssignedTo">Assigned To</option>
                    </select>
                </div>
                <div class="btn-group">
                    <button class="btn btn-default" onclick="ajax_loadContent()">Search</button>
                </div>
            </div>
        </div>
    </div>

    <table class="js-sort-table table" id="company-Table" data-sortable>
        <thead>
            <tr>
                <th class="col-md-1">
                    Name
                </th>
                <th class="col-md-1">
                    Website
                </th>
                <th class="col-md-1">
                    City
                </th>
                <th class="col-md-1">
                    Category
                </th>
                <th class="col-md-1">
                    Status
                </th>
                <th class="col-md-1" style="min-width:150px">
                    Contact Person
                </th>
                <th class="col-md-1" style="width:120px;">
                    Position
                </th>
                <th class="col-md-1" style="min-width:230px">
                    Mobile
                </th>
                <th class="col-md-1">
                    AssignedTo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2"> </td>
                <td colspan="3">
                    <br />
                    <img src="~/Images/GIF/loading.gif" height="25" />
                    Loading Companies, please wait...
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/Job/CustEntMainList.js"></script>
<script src="~/Scripts/sort-table.js"></script>
<script src="~/Scripts/sorttable.min.js"></script>